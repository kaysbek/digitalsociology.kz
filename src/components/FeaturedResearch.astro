---
const featuredArticles = [
	{
		title: "The Impact of AI on Social Structures",
		excerpt: "Exploring how artificial intelligence is reshaping traditional social hierarchies and creating new forms of digital inequality.",
		category: "Digital Culture",
		readTime: "8 min read",
		date: "Dec 15, 2024",
		featured: true
	},
	{
		title: "Social Media and Political Discourse",
		excerpt: "Analyzing the role of social platforms in shaping contemporary political conversations and democratic processes.",
		category: "Social Media",
		readTime: "12 min read",
		date: "Dec 10, 2024",
		featured: false
	},
	{
		title: "Digital Privacy in the Age of Surveillance",
		excerpt: "Examining the tension between technological convenience and personal privacy in modern digital ecosystems.",
		category: "Technology & Society",
		readTime: "10 min read",
		date: "Dec 5, 2024",
		featured: false
	}
];
---

<section class="section featured-research">
	<div class="container">
		<h2 class="section-title">Featured Research</h2>
		<p class="section-subtitle">
			Discover our latest insights into the digital transformation of society
		</p>

		<div class="research-grid">
			{featuredArticles.map((article, index) => (
				<article class={`research-card ${article.featured ? 'featured' : ''} ${index === 0 ? 'main-featured' : ''}`}>
					<div class="research-card-header">
						<div class="research-category">{article.category}</div>
						{article.featured && <div class="featured-badge">Featured</div>}
					</div>
					
					<div class="research-card-content">
						<h3 class="research-title">{article.title}</h3>
						<p class="research-excerpt">{article.excerpt}</p>
						
						<div class="research-meta">
							<span class="research-date">{article.date}</span>
							<span class="research-read-time">{article.readTime}</span>
						</div>
					</div>
					
					<div class="research-card-footer">
						<a href="/research" class="read-more">
							Read More
							<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M5 12h14M12 5l7 7-7 7"/>
							</svg>
						</a>
					</div>
				</article>
			))}
		</div>

		<div class="section-cta">
			<a href="/research" class="btn btn-primary">
				View All Research
			</a>
		</div>
	</div>
</section>

<style>
	.featured-research {
		background: rgba(30, 41, 59, 0.3);
		border-radius: var(--border-radius);
		margin: var(--spacing-3xl) 0;
	}

	.research-grid {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: var(--spacing-lg);
		margin-bottom: var(--spacing-2xl);
	}

	.main-featured {
		grid-row: span 2;
	}

	.research-card {
		background: rgba(30, 41, 59, 0.8);
		border: 1px solid var(--color-border);
		border-radius: var(--border-radius);
		padding: var(--spacing-lg);
		backdrop-filter: blur(8px);
		transition: all 0.3s ease;
		display: flex;
		flex-direction: column;
		gap: var(--spacing-md);
	}

	.research-card:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-xl);
		border-color: var(--color-primary);
	}

	.research-card.featured {
		border-color: var(--color-primary);
		background: rgba(59, 130, 246, 0.1);
	}

	.research-card-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.research-category {
		background: rgba(59, 130, 246, 0.2);
		color: var(--color-primary);
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: 16px;
		font-size: 0.75rem;
		font-weight: 500;
	}

	.featured-badge {
		background: var(--color-accent);
		color: white;
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: 16px;
		font-size: 0.75rem;
		font-weight: 500;
	}

	.research-card-content {
		flex: 1;
		display: flex;
		flex-direction: column;
		gap: var(--spacing-md);
	}

	.research-title {
		font-size: 1.5rem;
		font-weight: 600;
		color: var(--color-text);
		line-height: 1.3;
	}

	.main-featured .research-title {
		font-size: 2rem;
	}

	.research-excerpt {
		color: var(--color-text-muted);
		line-height: 1.6;
		flex: 1;
	}

	.research-meta {
		display: flex;
		gap: var(--spacing-md);
		font-size: 0.875rem;
		color: var(--color-text-muted);
	}

	.research-card-footer {
		display: flex;
		justify-content: flex-end;
	}

	.read-more {
		display: flex;
		align-items: center;
		gap: var(--spacing-xs);
		color: var(--color-primary);
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s ease;
	}

	.read-more:hover {
		color: var(--color-secondary);
		transform: translateX(4px);
	}

	.section-cta {
		text-align: center;
	}

	@media (max-width: 1024px) {
		.research-grid {
			grid-template-columns: 1fr;
		}

		.main-featured {
			grid-row: span 1;
		}
	}

	@media (max-width: 768px) {
		.research-title {
			font-size: 1.25rem;
		}

		.main-featured .research-title {
			font-size: 1.5rem;
		}

		.research-meta {
			flex-direction: column;
			gap: var(--spacing-xs);
		}
	}
</style>